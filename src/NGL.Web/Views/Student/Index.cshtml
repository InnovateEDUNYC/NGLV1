@model IEnumerable<NGL.Web.Models.Student.EnrollmentModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Enroll a Student", "Create")
</p>
<table class="table" id="student-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastSurname)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.StudentUsi)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentUsi)
        </td>
    </tr>
}

</table>
