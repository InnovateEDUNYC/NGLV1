@model NGL.Web.Models.Session.SessionCreateModel

@{
    ViewBag.Title = "Create a Session";
}

<h2>Session</h2>

@using (var f = Html.BeginChameleonForm())
{
    using (var s = f.BeginSection("Info"))
    {
        @s.FieldFor(m => m.TermType)
        @s.FieldFor(m => m.SchoolYearType)
        @s.FieldFor(m => m.BeginDate).AddClass("datepicker")
        @s.FieldFor(m => m.EndDate).AddClass("datepicker")
        @s.FieldFor(m => m.TotalInstructionalDays)
    }
    using (var n = f.BeginNavigation())
    {
        @n.Submit("Create")
    }
}
