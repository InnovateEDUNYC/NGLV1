@model NGL.Web.Models.Course.CourseModel

@{
    ViewBag.Title = "Add a New Course";
 }

<h2>Course</h2>

@using (var f = Html.BeginChameleonForm())
{
   using (var s = f.BeginSection("Info"))
    {
        @s.FieldFor(m => m.CourseCode)
        @s.FieldFor(m => m.CourseTitle)
        @s.FieldFor(m => m.NumberOfParts)
        @s.FieldFor(m => m.AcademicSubjectDescriptorId)
        @s.FieldFor(m => m.CourseDescription)
        @s.FieldFor(m => m.DateCourseAdopted)
        @s.FieldFor(m => m.HighSchoolCourseRequirement)
        @s.FieldFor(m => m.CourseGPAApplicabilityTypeId)
        @s.FieldFor(m => m.CourseDefinedByTypeId)
        @s.FieldFor(m => m.MinimumAvailableCreditTypeId)
        @s.FieldFor(m => m.MinimumAvailableCreditConversion)
        @s.FieldFor(m => m.MinimumAvailableCredit)
        @s.FieldFor(m => m.MaximumAvailableCreditTypeId)
        @s.FieldFor(m => m.MaximumAvailableCreditConversion)
        @s.FieldFor(m => m.MaximumAvailableCredit)
        @s.FieldFor(m => m.CareerPathwayTypeId)
        @s.FieldFor(m => m.TimeRequiredForCompletion)
    }
    using (var n = f.BeginNavigation())
    {
        @n.Submit("Create")
    }
}


