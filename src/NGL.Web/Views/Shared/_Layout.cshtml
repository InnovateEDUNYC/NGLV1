<!DOCTYPE html>
<html>

    </head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NGL Platform", "Edit", "School", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="text-center" href="@Url.Action("Index", "Home")">
                            <span class="fa fa-home fa-2x"></span>
                            <br />
                            Home
                        </a>
                    </li>
                    <li class="dropdown">
                        <a class="text-center" href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-book fa-2x"></span>
                            <br />
                            Planning
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Enrollment", "CreateStudent", "Enrollment")</li>
                            <li>@Html.ActionLink("Scheduling", "Scheduling", "Home")</li>
                        </ul>
                    </li>
                    <li>
                        <a class="text-center" href="#">
                            <span class="fa fa-file-text-o fa-2x"></span>
                            <br />
                            Sections
                        </a>
                    </li>
                    <li>
                        <a class="text-center" href="@Url.Action("All", "Student")">
                            <span class="fa fa-user fa-2x"></span>
                            <br />
                            Profile
                        </a>
                    </li>
                    <li>
                        <a class="text-center" href="#">
                            <span class="fa fa-flag-o fa-2x"></span>
                            <br />
                            Reports
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Next Generation Learning Platform</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/views")

    <script type="text/javascript">
        @RenderSection("scripts", required: false)
    </script>

    @MiniProfiler.RenderIncludes()
</body>
</html>
