@model NGL.Web.Models.Section.CreateModel

@{
    ViewBag.Title = "Create a Section";
}

<div class="panel panel-default form-header">
    <h2>Section</h2>
</div>

<div class="panel panel-default form-panel">
    @using (var f = Html.BeginNglForm())
    {
        using (var s = f.BeginSection(""))
        {
            <div class="hidden">
                @s.FieldFor(m => m.SessionId)
            </div>

            @s.FieldFor(m => m.Session)
            @s.FieldFor(m => m.Period)
            @s.FieldFor(m => m.Classroom)
            @s.FieldFor(m => m.Course)
            @s.FieldFor(m => m.UniqueSectionCode)
        }

        using (var n = f.BeginNavigation())
        {
            @n.Submit("Create").AddClass("btn btn-primary")
        }
    }
</div>
    @section Scripts {
        Ngl.shared.sessionAutocomplete.init();
        Ngl.section.getCourse.init();
    }
